@page "{id:int}"
@model ReservationModel
@{
    ViewData["Title"] = "Reservation Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h3>Reservation Details</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Reservation ID:</dt>
        <dd class="col-sm-10">@Model.Reservation.Id</dd>

        <dt class="col-sm-2">Customer Name:</dt>
        <dd class="col-sm-10">@Model.Reservation.CustomerName</dd>

        <dt class="col-sm-2">Customer Email:</dt>
        <dd class="col-sm-10">@Model.Reservation.CustomerEmail</dd>

        <dt class="col-sm-2">Electric Car:</dt>
        <dd class="col-sm-10">@Model.Reservation.Car.Make @Model.Reservation.Car.Model (@Model.Reservation.Car.Year)</dd>

        <dt class="col-sm-2">Start Date:</dt>
        <dd class="col-sm-10">@Model.Reservation.StartDate.ToString("MM/dd/yyyy")</dd>

        <dt class="col-sm-2">End Date:</dt>
        <dd class="col-sm-10">@Model.Reservation.EndDate.ToString("MM/dd/yyyy")</dd>

        <dt class="col-sm-2">Is Approved:</dt>
        <dd class="col-sm-10">@Model.Reservation.IsApproved</dd>

        <dt class="col-sm-2">Is Checked Out:</dt>
        <dd class="col-sm-10">@Model.Reservation.IsCheckedOut</dd>

        <dt class="col-sm-2">Is Checked In:</dt>
        <dd class="col-sm-10">@Model.Reservation.IsCheckedIn</dd>
    </dl>
</div>
