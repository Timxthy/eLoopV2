@page
@model IndexModel
@{
    ViewData["Title"] = "Available Electric Cars";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>VIN</th>
            <th>Battery Capacity</th>
            <th>Charging Time</th>
            <th>Plate Number</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.ElectricCars)
        {
            <tr>
                <td>@car.ID</td>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Color</td>
                <td>@car.VIN</td>
                <td>@car.BatteryCapacity kWh</td>
                <td>@car.ChargingTime hours</td>
                <td>@car.PlateNumber</td>
                <td>@car.Location.City</td>
            </tr>
        }
    </tbody>
</table>
