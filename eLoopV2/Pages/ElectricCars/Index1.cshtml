@page
@model eLoopV2.Pages.ElectricCars.Index1Model

@{
}


<h1>Available Electric Cars</h1>

<form>
    <div class="form-group row">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Make" />
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Model" />
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Year" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Color" />
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Battery Capacity" />
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Charging Time" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            <select class="form-control">
                <option value="">Location</option>
                <option value="1">Location 1</option>
                <option value="2">Location 2</option>
            </select>
        </div>
        <div class="col-md-4">
            <select class="form-control">
                <option value="">Availability</option>
                <option value="1">Available</option>
                <option value="2">Unavailable</option>
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>Battery Capacity</th>
            <th>Charging Time</th>
            <th>Location</th>
            <th>Availability</th>
            <th></th>
        </tr>
    </thead>
    
</table>

