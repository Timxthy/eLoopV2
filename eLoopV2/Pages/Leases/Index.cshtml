@page "{id?}"
@model eLoopV2.Pages.LeaseModel
@{
    ViewData["Title"] = "Lease";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="CarId">Car</label>
        <select asp-for="Lease.CarId" class="form-control">
            <option value="">-- Select a car --</option>
            @foreach (var car in Model.AvailableCars)
            {
                <option value="@car.ID">@car.Make @car.Model</option>
            }
        </select>
        <span asp-validation-for="Lease.CarId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lease.StartDate"></label>
        <input asp-for="Lease.StartDate" class="form-control" />
        <span asp-validation-for="Lease.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lease.EndDate"></label>
        <input asp-for="Lease.EndDate" class="form-control" />
        <span asp-validation-for="Lease.EndDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
