@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to eLoopV2</h1>
    <p class="lead">An electric car rental service.</p>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-page="./ElectricCars/Index" method="get">
                <div class="input-group">
                    <input type="text" class="form-control form-control-lg" name="searchString" placeholder="Enter your postcode...">
                    <div class="input-group-append">
                        <button class="btn btn-primary btn-lg" type="submit">Search</button>
                    </div>
                </div>
            </form>
            <p>Thank you for visiting our electric car rental service. Please browse our available cars and book your reservation today.</p>

            <div>
                <a asp-page="/ElectricCars/Index">View Electric Cars</a>
            </div>
        </div>
    </div>
</div>
